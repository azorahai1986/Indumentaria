<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagen_template_modelo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/calsa"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/nombre_template_model"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Calsa Deportiva"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <TextView
        android:id="@+id/precio_template_model"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="$450"
            android:textStyle="bold"
        android:layout_marginLeft="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/categorias_template_model"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Deportivo"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:id="@+id/subCate_template_model"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Informal"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    </LinearLayout>



</LinearLayout>